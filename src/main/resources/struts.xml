<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="login" namespace="/login" extends="struts-default,json-default">
		<interceptors>
			<interceptor-stack name="jsonDataStack">
				<interceptor-ref name="json"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<!-- 登录action -->
		<action name="login" class="org.ce.action.LoginAction">
			<interceptor-ref name="jsonDataStack"></interceptor-ref>
			<result name="none" type="json">
				<param name="root">rootMap</param>
			</result>
		</action>
		
		<!-- 注册用户 -->
		<action name="register" class="org.ce.action.LoginAction" method="register">
			<interceptor-ref name="jsonDataStack"></interceptor-ref>
			<result name="none" type="json">
				<param name="root">rootMap</param>
			</result>
		</action>
		
		<!-- 删除用户 -->
		<action name="deleteUser" class="org.ce.action.LoginAction" method="deleteUser">
			<interceptor-ref name="jsonDataStack"></interceptor-ref>
			<result name="none" type="json">
				<param name="root">rootMap</param>
			</result>
		</action>
		
		<!-- 查询所有注册用户 -->
		<action name="queryUsers" class="org.ce.action.LoginAction" method="queryUsers">
			<interceptor-ref name="jsonDataStack"></interceptor-ref>
			<result name="none" type="json">
				<param name="root">rootMap</param>
			</result>
		</action>
		
		<!-- 更新用户 -->
		<action name="updateUser" class="org.ce.action.LoginAction" method="updateUser">
			<interceptor-ref name="jsonDataStack"></interceptor-ref>
			<result name="none" type="json">
				<param name="root">rootMap</param>
			</result>
		</action>
		<!-- 页面跳转 -->
		<action name="*">
			<result name="success">/login/{1}.jsp</result>
		</action>
	</package>

</struts>